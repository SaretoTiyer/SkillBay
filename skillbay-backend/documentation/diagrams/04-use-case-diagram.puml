' SkillBay - Diagrama de Casos de Uso UML
' Marketplace de Servicios Profesionales
' Casos de Uso Principales del Sistema

left to right direction
skinparam packageStyle rectangle
skinparam actorStyle awesome

' ============================================
' ACTORES
' ============================================

actor "Usuario\n(Cliente / Ofertante)" <<actor>> as Usuario
actor "Administrador" <<actor>> as Admin
actor "Sistema de Pago\n(MercadoPago)" <<actor>> as MercadoPago

' ============================================
' PAQUETES / MÓDULOS
' ===========================================

package "Gestión de Usuarios y Perfiles" {
    usecase "UC01: Registrarse" as UC01
    usecase "UC02: Iniciar Sesión" as UC02
    usecase "UC03: Cerrar Sesión" as UC03
    usecase "UC04: Recuperar Contraseña" as UC04
    usecase "UC05: Actualizar Perfil" as UC05
    usecase "UC06: Ver Perfil Público" as UC06
}

package "Publicación y Búsqueda de Servicios" {
    usecase "UC07: Crear Servicio" as UC07
    usecase "UC08: Editar Servicio" as UC08
    usecase "UC09: Eliminar Servicio" as UC09
    usecase "UC10: Buscar Servicios" as UC10
    usecase "UC11: Filtrar por Categoría" as UC11
    usecase "UC12: Ver Detalles de Servicio" as UC12
}

package "Gestión de Ofertas y Solicitudes" {
    usecase "UC13: Crear Postulación" as UC13
    usecase "UC14: Ver Mis Postulaciones" as UC14
    usecase "UC15: Ver Solicitudes Recibidas" as UC15
    usecase "UC16: Aceptar Postulación" as UC16
    usecase "UC17: Rechazar Postulación" as UC17
    usecase "UC18: Iniciar Trabajo" as UC18
    usecase "UC19: Completar Trabajo" as UC19
    usecase "UC20: Cancelar Postulación" as UC20
}

package "Proceso de Pago con MercadoPago" {
    usecase "UC21: Iniciar Pago de Servicio" as UC21
    usecase "UC22: Confirmar Pago" as UC22
    usecase "UC23: Consultar Estado de Pago" as UC23
    usecase "UC24: Ver Historial de Pagos" as UC24
}

package "Gestión de Suscripciones a Planes" {
    usecase "UC25: Ver Planes Disponibles" as UC25
    usecase "UC26: Suscribirse a Plan" as UC26
    usecase "UC27: Cancelar Suscripción" as UC27
    usecase "UC28: Actualizar Plan" as UC28
}

package "Sistema de Valoraciones y Reseñas" {
    usecase "UC29: Crear Reseña" as UC29
    usecase "UC30: Ver Reseñas de Servicio" as UC30
    usecase "UC31: Responder Reseña" as UC31
}

package "Administración del Sistema" {
    usecase "UC32: Gestionar Usuarios" as UC32
    usecase "UC33: Bloquear/Desbloquear Usuario" as UC33
    usecase "UC34: Gestionar Categorías" as UC34
    usecase "UC35: Gestionar Planes" as UC35
    usecase "UC36: Ver Dashboard Admin" as UC36
    usecase "UC37: Ver Métricas del Sistema" as UC37
    usecase "UC38: Gestionar Reportes" as UC38
}

